<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thomas.dedinsky.DataStructuresApp.LessonActivity"
    android:background="@color/colorAccent">

    <LinearLayout
        android:id="@+id/contentTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout android:id="@+id/sectionRegCode" android:layout_weight="0" android:layout_height="fill_parent" android:layout_width="0dp">
            <io.github.kbiakov.codeview.CodeView
                android:id="@+id/reg_code_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/sectionVisCode" android:layout_weight="0" android:layout_height="fill_parent" android:layout_width="0dp">
            <io.github.kbiakov.codeview.CodeView
                android:id="@+id/vis_code_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/sectionTopSum" android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp" android:paddingLeft="6dp" android:paddingRight="6dp">
            <TextView
                android:id="@+id/top_sum_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="26dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/contentBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0">

        <LinearLayout android:id="@+id/sectionBottomSum" android:layout_weight="0" android:layout_height="fill_parent" android:layout_width="0dp" android:paddingLeft="6dp" android:paddingRight="6dp">
            <TextView
                android:id="@+id/bottom_sum_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="26dp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:backgroundTint="@color/colorPrimary"
        app:menu="@menu/navigation"
        app:itemBackground="@drawable/drawable_selector"
        app:itemIconTint="@color/color_selector"
        app:itemTextColor="@color/color_selector"/>

</LinearLayout>

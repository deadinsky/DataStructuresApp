<resources>

    <style name="light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="regTextColour">@color/black</item>
        <item name="lightTextColour">@color/lightBlack</item>
        <item name="regBackColour">@color/white</item>
        <item name="darkBackColour">@color/darkWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="regTextColour">@color/white</item>
        <item name="lightTextColour">@color/darkWhite</item>
        <item name="regBackColour">@color/black</item>
        <item name="darkBackColour">@color/lightBlack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
